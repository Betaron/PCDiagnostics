<UserControl x:Class="PCDiagnostics.Client.Views.Tabs.Specs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCDiagnostics.Client.Views.Tabs"
			 xmlns:viewModels="clr-namespace:PCDiagnostics.Client.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.DataContext>
		<viewModels:SpecsViewModel/>
	</UserControl.DataContext>
	<Grid>
		<ListBox ItemsSource="{Binding Devices}" ScrollViewer.CanContentScroll="False">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Expander Header="{Binding Name}">
						<ListBox ItemsSource="{Binding Specs}" Margin="20, 10, 0, 5">
							<ListBox.ItemTemplate>
								<DataTemplate>
									<TextBlock>
										<TextBlock.Text>
											<MultiBinding StringFormat="{}{0}: {1}">
												<Binding Path="Key" />
												<Binding Path="Value" />
											</MultiBinding>
										</TextBlock.Text>
									</TextBlock>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</Expander>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
